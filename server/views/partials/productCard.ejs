<div class="product-card <%= (product.stock_quantity <= product.low_stock_threshold) ? 'low-stock' : '' %>" style="background:#fff;padding:12px;border-radius:8px;border:1px solid #eee;margin-bottom:8px">
  <div style="display:flex;justify-content:space-between;align-items:center">
    <strong><%= product.name %></strong>
    <div style="font-size:0.85rem;color:#666">Price: â‚¹<%= product.price %></div>
  </div>
  <div style="margin-top:6px;color:#555"><%= product.description || '' %></div>
  <div style="margin-top:8px" class="meta">Stock: <%= product.stock_quantity %> | Low threshold: <%= product.low_stock_threshold %></div>

  <div style="margin-top:8px;display:flex;gap:8px;align-items:center">
    <form action="/home/inventory/<%= product.warehouse %>/products/<%= product._id %>/decrease" method="post" style="display:inline">
      <button type="submit">-</button>
    </form>
    <form action="/home/inventory/<%= product.warehouse %>/products/<%= product._id %>/increase" method="post" style="display:inline">
      <button type="submit">+</button>
    </form>
    <form action="/home/inventory/<%= product.warehouse %>/products/<%= product._id %>/delete" method="post" style="margin-left:auto">
      <button type="submit">Delete</button>
    </form>
  </div>
</div>